{
  "name": "@bemedev/xunit",
  "version": "0.1.6",
  "description": "Unit tests for XState",
  "author": "chlbri <bri_lvi@icloud.com>",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "keywords": [
    "xstate",
    "xstatejs",
    "unit",
    "jest",
    "test",
    "unit testing",
    "state machine",
    "fsm",
    "finite state machine",
    "statechart",
    "clean architecture"
  ],
  "scripts": {
    "tsc": "tsc",
    "tsc-w": "tsc -w",
    "build": "pnpm run tsc && pnpm run lint",
    "test": "jest --passWithNoTests",
    "test-w": "jest --passWithNoTests --watch",
    "prettier": "prettier --write \"src/**/*.{ts,tsx}\"",
    "eslint": "eslint \"{src/**/*,App}.{ts,tsx}\"",
    "lint": "pnpm run prettier && pnpm run eslint --fix",
    "pnpm": "pnpm install",
    "upgrade": "ncu -u && pnpm run pnpm",
    "git-push": "git push --tags",
    "prepare": "husky install",
    "p-q": "pretty-quick --staged --pattern \"**/*.*(ts|tsx)\""
  },
  "devDependencies": {
    "@bemedev/npm-publish": "0.0.1-pnpm2",
    "@bemedev/test": "^0.0.5",
    "@swc/core": "^1.2.177",
    "@swc/jest": "^0.2.20",
    "@types/faker": "^6.6.9",
    "@types/jest": "^27.5.0",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "dayjs": "^1.11.1",
    "edit-json-file": "^1.7.0",
    "eslint": "^8.14.0",
    "faker": "^6.6.6",
    "husky": "^7.0.0",
    "jest": "^28.0.3",
    "jest-cucumber": "^3.0.1",
    "jest-extended": "^2.0.0",
    "nanoid": "^3.3.4",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "typescript": "^4.6.4",
    "xstate": "^4.31.0"
  },
  "repository": "https://github.com/chlbri/xunit.git",
  "dependencies": {
    "@bemedev/fsf": "^0.2.0",
    "@bemedev/types": "^0.0.3",
    "@xstate/immer": "^0.3.1",
    "immer": "^9.0.12"
  },
  "peerDependencies": {
    "jest": "^28.0.3",
    "xstate": "^4.31.0"
  }
}
